<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:stretchColumns="1,2,3;"
    android:padding="5dp"

    android:layout_height="match_parent">
    <TableRow>

        <TextView
            android:id="@+id/txt_visor"
            android:text="0.0"
            />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/bt_7"
            android:layout_width="126dp"
            android:text="7" />
        <Button
            android:id="@+id/bt_8"
            android:text="8"
            />

        <Button
            android:id="@+id/bt_9"
            android:layout_width="102dp"
            android:text="9" />

    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/bt_6"
            android:text="6"
            />
        <Button
            android:id="@+id/bt_5"
            android:text="5"
            />
        <Button
            android:id="@+id/bt_4"
            android:text="4"
            />


    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/bt_3"
            android:text="3"
            />
        <Button
            android:id="@+id/bt_2"
            android:text="2"
            />
        <Button
            android:id="@+id/bt_1"
            android:text="1"
            />

    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/bt_0"
            android:text="0" />
        <Button
            android:id="@+id/bt_igual"
            android:text="="
            />
        <Button
            android:id="@+id/bt_soma"
            android:text="+"
            />

    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/apagar"
            android:text="C"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/bt_mult"
            android:text="x"
            />
        <Button
            android:id="@+id/bt_ponto"
            android:text="."
            />
        <Button
            android:id="@+id/bt_subt"
            android:text="-"
            />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/bt_divi"
            android:text="/"
            />
    </TableRow>
</TableLayout>